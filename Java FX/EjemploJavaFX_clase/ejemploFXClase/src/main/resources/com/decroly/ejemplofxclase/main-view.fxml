      </HBox>
      <HBox fx:id="emailHBox1" alignment="CENTER_LEFT" layoutX="55.0" layoutY="375.0" prefHeight="35.0" prefWidth="200.0">
         <children>
            <Label text="Telefono">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="phoneTextField" prefHeight="25.0" prefWidth="400.0">
               <HBox.margin>
                  <Insets left="22.0" />
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets left="25.0" />
         </VBox.margin>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox fx:id="buttonsHBox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#onSaveButtonAction" style="-fx-background-color: #0099cc; -fx-text-fill: white;" text="Guardar">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#onCloseButtonAction" style="-fx-background-color: #FF6666; -fx-text-fill: white;" text="Cerrar">
               <HBox.margin>
                  <Insets left="25.0" right="70.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
